<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.effect.DropShadow?>
<?import javafx.scene.paint.Color?>

<?import java.net.URL?>
<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.example.demo.controller.SellerViewController"
            prefWidth="950" prefHeight="650"
            style="-fx-background-color: linear-gradient(to bottom right, #E6F4FF, #D3EBFF);">

    <!-- TOP MENU -->
    <top>
        <HBox spacing="15" alignment="CENTER_LEFT"
              style="-fx-background-color: linear-gradient(to right, #021024, #062F4F);
                     -fx-padding: 15;
                     -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.35), 10, 0, 0, 3);">

            <!-- Buttons styling -->
            <stylesheets>
                <URL value="@SellerStyle.css"/>
            </stylesheets>

            <Button fx:id="btnQuanLySanPham" text="Quản lý sản phẩm" prefWidth="220"
                    styleClass="menu-button"/>

            <Button fx:id="btnXacNhanDonHang" text="Xác nhận đơn hàng" prefWidth="220"
                    styleClass="menu-button"/>

            <Button fx:id="btnThongKeDoanhThu" text="Thống kê doanh thu" prefWidth="220"
                    styleClass="menu-button"/>

            <Region HBox.hgrow="ALWAYS"/>

            <!-- Logout -->
            <Button fx:id="logoutButton" text="Đăng xuất" prefWidth="140"
                    styleClass="logout-button"/>
        </HBox>
    </top>

    <!-- MAIN CONTENT AREA -->
    <center>
        <StackPane fx:id="contentPane"
                   style="-fx-background-color: white;
                          -fx-padding: 20;
                          -fx-background-radius: 15;
                          -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.25), 15, 0, 0, 4);"
                   BorderPane.alignment="CENTER">
        </StackPane>
    </center>

</BorderPane>
