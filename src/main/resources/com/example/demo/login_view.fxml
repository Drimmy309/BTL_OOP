<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.example.demo.controller.LoginController"
            prefHeight="400.0" prefWidth="600.0"
            style="-fx-background-color: #021024;">

    <!-- Khung chính căn giữa -->
    <VBox spacing="20.0" alignment="CENTER" AnchorPane.topAnchor="0" AnchorPane.bottomAnchor="0"
          AnchorPane.leftAnchor="0" AnchorPane.rightAnchor="0">

        <Label text="Đăng Nhập" style="-fx-font-size: 28px; -fx-font-weight: bold; -fx-text-fill: #C1E8FF;"/>

        <!-- Username -->
        <HBox spacing="10" alignment="CENTER">
            <TextField fx:id="usernameField" promptText="Nhập username" prefWidth="270"
                       style="-fx-background-color: #052659; -fx-text-fill: #C1E8FF; -fx-prompt-text-fill: #7DA0C4; -fx-background-radius: 5;"/>
        </HBox>

        <!-- Password -->
        <HBox spacing="10" alignment="CENTER">
            <PasswordField fx:id="passwordField" promptText="Nhập password" prefWidth="270"
                           style="-fx-background-color: #052659; -fx-text-fill: #C1E8FF; -fx-prompt-text-fill: #7DA0C4; -fx-background-radius: 5;"/>
        </HBox>

        <!-- Nút -->
        <HBox spacing="30" alignment="CENTER">
            <Button fx:id="loginButton" text="Đăng Nhập" minWidth="120"
                    style="-fx-background-color: #5483B3; -fx-text-fill: #C1E8FF; -fx-font-weight: bold; -fx-background-radius: 5;"/>
            <Button fx:id="registerButton" text="Đăng Ký" minWidth="120"
                    style="-fx-background-color: #7DA0C4; -fx-text-fill: #021024; -fx-font-weight: bold; -fx-background-radius: 5;"/>
        </HBox>

        <Label fx:id="lblMsg" text="" style="-fx-font-size: 10px; -fx-font-weight: bold; -fx-text-fill: red;"/>

    </VBox>
</AnchorPane>
