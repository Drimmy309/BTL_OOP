<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.*?>

<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.example.demo.controller.CustomerViewController"
            prefWidth="800" prefHeight="600">

    <!-- 3 nút + Logout -->
    <top>
        <HBox spacing="10" prefWidth="200" style="-fx-background-color: #021024; -fx-padding: 10;">

            <Button fx:id="btnDanhMuc" text="Danh mục sản phẩm" prefWidth="250"
                    style="-fx-background-color: #021024; -fx-text-fill: white; -fx-font-weight: bold"/>
            <Button fx:id="btnGioHang" text="Giỏ hàng" prefWidth="250"
                    style="-fx-background-color: #021024; -fx-text-fill: white; -fx-font-weight: bold"/>
            <Button fx:id="btnDonHang" text="Đơn hàng" prefWidth="250"
                    style="-fx-background-color: #021024; -fx-text-fill: white; -fx-font-weight: bold"/>

            <!-- Spacer -->
            <Region HBox.hgrow="ALWAYS"/>

            <!-- Button Đăng xuất -->
            <Button fx:id="logoutButton" text="Đăng xuất" prefWidth="150" alignment="CENTER"
                    style="-fx-background-color: #C72C41; -fx-text-fill: white; -fx-font-weight: bold"/>
        </HBox>
    </top>

    <!-- Bên phải: Nội dung tương ứng -->
    <center>
        <StackPane fx:id="contentPane" style="-fx-background-color: #C1E8FF; -fx-padding: 10;">
            <!-- Nội dung sẽ được load động theo nút bấm -->
        </StackPane>
    </center>

</BorderPane>
